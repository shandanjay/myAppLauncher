<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:background="#ffdfeaf1"
	android:weightSum="1">

	<TextView
		android:layout_width="326dp"
		android:layout_height="65dp"
		android:text="My Nanodegree Apps!"
		android:id="@+id/textView"
		android:textColor="#ff000000"
		android:textSize="32dp"
		android:textIsSelectable="false"
		android:layout_weight="0.07" />

	<Button
		style="?android:attr/buttonBarButtonStyle"
		android:background="@drawable/launcher_button"
		android:layout_height="wrap_content"
		android:layout_width="280dp"
		android:text="Spotify Streamer"
		android:layout_margin="8dp"
		android:textColor="#ff000000"
		android:id="@+id/app1" />
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal"
		android:background="#ffdfeaf1"
		android:weightSum="1">
									<Button
										style="?android:attr/buttonBarButtonStyle"
										android:layout_height="wrap_content"
										android:layout_width="132dp"
										android:text="Scores App"
										android:layout_margin="8dp"
										android:background="#fff08c35"
										android:textColor="#ff000000"
										android:layout_gravity="left|top"
										android:id="@+id/app2i" />

									<Button
										style="?android:attr/buttonBarButtonStyle"
										android:layout_height="wrap_content"
										android:layout_width="132dp"
										android:text="Library App"
										android:layout_margin="8dp"
										android:background="#fff08c35"
										android:textColor="#ff000000"
										android:layout_gravity="right|top"
										android:id="@+id/app2ii" />
	</LinearLayout>
	<Button
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="wrap_content"
		android:layout_width="280dp"
		android:text="Build it bigger"
		android:layout_margin="8dp"
		android:background="#fff08c35"
		android:textColor="#ff000000"
		android:id="@+id/app3" />

	<Button
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="wrap_content"
		android:layout_width="280dp"
		android:text="XYZ Reader"
		android:layout_margin="8dp"
		android:background="#fff08c35"
		android:textColor="#ff000000"
		android:id="@+id/app4" />

	<Button
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="wrap_content"
		android:layout_width="280dp"
		android:text="Capstone"
		android:layout_margin="10dp"
		android:background="#ffcd0e3e"
		android:textColor="#ffffffff"
		android:id="@+id/app5" />

</LinearLayout>

